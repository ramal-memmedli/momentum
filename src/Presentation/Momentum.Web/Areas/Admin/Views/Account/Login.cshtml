@model LoginVM
@{
    Layout = "_AuthenticationLayout";
}


<!-- Start wrapper-->
<div id="wrapper">

    <div class="loader-wrapper"><div class="lds-ring"><div></div><div></div><div></div><div></div></div></div>
    <div class="card card-authentication1 mx-auto my-5">
        <div class="card-body">
            <div class="card-content p-2">
                <div class="text-center">
                    <img src="assets/images/logo-icon.png" alt="logo icon">
                </div>
                <div class="card-title text-uppercase text-center py-3">Sign In</div>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Username" class="sr-only">Username</label>
                        <div class="position-relative has-icon-right">
                            <input asp-for="Username" class="form-control input-shadow" placeholder="Enter Username">
                            <div class="form-control-position">
                                <i class="icon-user"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Username" class="text-danger mb-2"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="sr-only">Password</label>
                        <div class="position-relative has-icon-right">
                            <input asp-for="Password" class="form-control input-shadow" placeholder="Enter Password">
                            <div class="form-control-position">
                                <i class="icon-lock"></i>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-danger mb-2"></span>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-6">
                            <div class="icheck-material-white">
                                <input asp-for="IsPersistent" />
                                <label asp-for="IsPersistent">Remember me</label>
                            </div>
                        </div>
                        <div class="form-group col-6 text-right">
                            <a href="reset-password.html">Reset Password</a>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-light btn-block">Sign In</button>

                    <div class="form-row mt-4">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                    </div>

                </form>
            </div>
        </div>
        <div class="card-footer text-center py-3">
            <p class="text-warning mb-0">Do not have an account? <a asp-controller="Account" asp-action="Register"> Sign Up here</a></p>
        </div>
    </div>
</div><!--wrapper-->